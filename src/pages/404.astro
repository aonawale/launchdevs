---
import Layout from '../components/Layout.astro';
import { SITE_CONFIG, getEmailLink } from '../config/site.ts';
---

<Layout title={`Page Not Found - ${SITE_CONFIG.name}`}>
  <div class="min-h-screen bg-gradient-to-br from-blue-50 to-white flex items-center justify-center py-12 px-4">
    <div class="max-w-md mx-auto text-center">
      <div class="bg-white rounded-2xl shadow-xl border border-gray-100 p-8">
        <!-- 404 Icon -->
        <div class="w-16 h-16 bg-orange-100 rounded-full flex items-center justify-center mx-auto mb-6">
          <svg class="w-8 h-8 text-orange-600" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
          </svg>
        </div>

        <h1 class="text-2xl font-bold text-gray-900 mb-4">
          Page Not Found
        </h1>

        <p class="text-gray-600 mb-6 leading-relaxed">
          Oops! The page you're looking for doesn't exist.
          It might have been moved or deleted.
        </p>

        <div class="space-y-4">
          <a
            href="/"
            class="block w-full bg-blue-600 text-white py-3 px-6 rounded-lg font-semibold hover:bg-blue-700 transition-colors cursor-pointer"
          >
            Return to Homepage
          </a>

          <div class="flex flex-col sm:flex-row gap-2">
            <a
              href="/#about"
              class="flex-1 text-blue-600 hover:text-blue-700 transition-colors text-sm"
            >
              About
            </a>
            <a
              href="/#how-it-works"
              class="flex-1 text-blue-600 hover:text-blue-700 transition-colors text-sm"
            >
              How It Works
            </a>
            <a
              href="/#pricing"
              class="flex-1 text-blue-600 hover:text-blue-700 transition-colors text-sm"
            >
              Pricing
            </a>
          </div>

          <p class="text-sm text-gray-500 mt-4">
            Questions? Email me at
            <a href={getEmailLink('Question from 404 page')} class="text-blue-600 hover:underline">
              {SITE_CONFIG.email}
            </a>
          </p>
        </div>
      </div>
    </div>
  </div>
</Layout>
